          <execution>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.datalogics</groupId>
            <artifactId>findbugs-config</artifactId>
            <version>1.0.0-SNAPSHOT</version>
          </dependency>
